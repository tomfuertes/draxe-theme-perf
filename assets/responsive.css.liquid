#main_content .product .product_price form,
.widget__specials ul li .product_price a {float: none;margin: 10px 0 0 0;}



/* BEST SELLERS */
.column .product-listing {margin-top: 15px;}
.column .product {text-align: center;}

.column .product .product_img {width: 100%;float: none;margin: 0;}
.column .product .product_img a {display: block;padding: 25px;}

.column .product .product_name {padding: 10px 0 0 0;border-top: 1px solid {{ settings.border_color }};}

.column .product .product_price {}
.column .product .product_price .money {display: block;padding: 5px 0 0 0;font: 19px {{ heading_font }};}
.column .product .btn {margin: 10px 0 0 0;}


.product_wrap #bx-pager a {width: 84px;}

}



