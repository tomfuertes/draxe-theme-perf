<script>(function() { // @author - tomfuertes_at_gmail.com

  // test for just came from cart
  if (/store\.draxe\.com\/cart/.test(document.referrer)) {
    fire('InitiateCheckout');
  }

  // track AddPaymentInfo onload b/c jQuery doesn't exist till then
  listen('load', window, function onload() {
    if (!window.jQuery) return;
    jQuery('.input-radio[name="checkout[payment_gateway]"],' +
      '#checkout_credit_card_number').one('change', function() {
      fire('AddPaymentInfo');
    });
  });

  function listen(evnt, elem, func) {
    if (elem.addEventListener) // W3C DOM
      elem.addEventListener(evnt, func, false);
    else if (elem.attachEvent) { // IE DOM
      var r = elem.attachEvent("on" + evnt, func);
      return r;
    }
  }

  function fire(step) {
    fbq('track', step);
    window.uetq = window.uetq || [];
    uetq.push({
      'ec': 'Shopify',
      'ea': 'Checkout',
      'el': step,
      'ev': 0
    });
  }

})(); // </script>
