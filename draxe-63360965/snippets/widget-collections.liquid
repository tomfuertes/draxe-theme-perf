<div class="widget widget__collections">
  	<h3 class="widget_header"><i class="fa fa-leaf"></i>Collections</h3>
    <div class="widget_content">
        <ul class="list">
        {% for collection in collections %}
        <li class="{{ collection.handle }}{% if page_title == collection.title %} active{% endif %}">
        <a href="{{ collection.url }}" title="{{ collection.title | escape }}">{{ collection.title | escape }}</a>
        </li>
        {% endfor %}
        </ul>
    </div>
</div>